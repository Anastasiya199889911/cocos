@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="body">
    <div class="container-fluid p-0" style="height: 100%; width: 100%;">
        <div class="row justify-content-center m-0" style=" width: 100%;">

            <div class="col-11 col-sm-11 col-md-11 col-lg-11 col-xl-11">
                <form action="@Url.Action("SaveUpdateProduct","Admin")" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="product_type_id" value="@ViewBag.titleID" />
                    <input type="text" name="name" class="about-product-title-add w-100" placeholder="Название" value="@ViewBag.product.name" />
                    <input type="hidden" name="id"  value="@ViewBag.product.id" />

                    <!-- страница ОПИСАНИЕ -->
                    <div class="row col-12 ml-0 mr-0 p-0">


                        <div class="row col-12 ml-0 mr-0 about-product-body">
                            <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 p-0 ml-0 mr-0">
                                <div class="row col-12 p-0 m-0">
                                    <div class="col-4 p-0">
                                        @foreach (var photo1 in ViewBag.product.photo)
                                        {
                                            <div class="col-5 p-0 ml-auto m-3">
                                                <img src="@Url.Content(photo1.photo)" class="w-100 about-product-img active-img">
                                            </div>
                                        }

                                    </div>
                                    <div class="col-8" style="padding-right: 3rem;padding-left: 3rem; padding-top: 3rem;">
                                        <img src="@Url.Content(ViewBag.mainPhoto.photo)" class="w-100">
                                    </div>
                                </div>
                                @*<div class="col-10 p-0 ml-auto">
                        <input style="font-size:1.5rem" type="file" name="files" multiple value="" />
                    </div>*@
                                @*</div>*@
                            </div>

                            <div class="col-12 col-sm-12 col-md-8 col-lg-8 col-xl-8 p-0 ml-0 mr-0">
                                <div class="row col-12 p-0 m-0">
                                    <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                                        <div class="row col-12 about-prod-price">
                                            <input type="text" name="price" class="about-product-price-add w-100" placeholder="цена" value="@ViewBag.product.price" />
                                        </div>
                                        <div class="row col-12 about-prod-price">
                                            <input type="text" name="count" class="about-product-price-add w-100 mt-4" placeholder="количество" value="@ViewBag.product.count" />
                                        </div>
                                    </div>

                                    <div class="col-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
                                        <div class="row col-12 about-prod-desc">
                                            <label class="about-product-desc">Дополнительно:</label>
                                        </div>
                                        <div class="row col-12">
                                            <input type="text" name="guarant" class="about-product-price-add w-100 mt-4" placeholder="Гарантия" value="@ViewBag.product.guarant" />
                                            <input type="text" name="country" class="about-product-price-add w-100 mt-4" placeholder="Страна-производитель" value="@ViewBag.product.country" />
                           

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row col-12 ml-0 mr-0 about-tech-title pl-5 pr-5">
                            <textarea class="about-product-desc w-100" name="description" placeholder="Описание">@ViewBag.product.description</textarea>
                        </div>
                        <div class="row col-12 ml-0 mr-0 about-tech-title pl-5 pr-5">
                            <label class="about-tech-title-text1">Технические характеристики </label>
                        </div>
                        <div class="row col-12 ml-0 mr-0 about-tech-text pl-5 pr-5">
                            @foreach (var ch in ViewBag.characteristic)
                            {
                                <div class="row col-12 ml-0 mr-0 p-0">
                                    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 p-0">
                                        <label class="about-tech-text-text1">@ch.characteriactics.name</label>
                                    </div>
                                    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 p-0">
                                        <input type="hidden" class="about-tech-text-text2-add w-100" name="characteristic_name" value="@ch.characteriactics.name" />
                                        <input type="text" class="about-tech-text-text2-add w-100" name="characteristic" value="@ch.text" />
                                    </div>
                                </div>
                            }


                        </div>

                    </div>

                    <button type="submit" class="plus-btn mt-4 mb-4" style="font-size:2rem;">
                        Сохранить
                    </button>
                </form>
            </div>
        </div>
</section>